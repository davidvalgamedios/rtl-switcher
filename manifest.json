{
  "name": "RTL Switcher",
  "short_name": "RTL Switcher",
  "version": "1.0",
  "description": "Switches between LTR to RTL on the current webpage",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "images/rtl-logo-16.png",
      "32": "images/rtl-logo-32.png",
      "48": "images/rtl-logo-48.png",
      "128": "images/rtl-logo-128.png"
    }
  },
  "icons": {
    "16": "images/rtl-logo-16.png",
    "32": "images/rtl-logo-32.png",
    "48": "images/rtl-logo-48.png",
    "128": "images/rtl-logo-128.png"
  },
  "manifest_version": 2
}