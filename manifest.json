{
  "name": "RTL Switcher",
  "version": "1.0",
  "description": "Switches between LTR to RTL of the current webpage",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_icon": {
      "16": "rtl-logo.png",
      "32": "rtl-logo.png",
      "48": "rtl-logo.png",
      "128": "rtl-logo.png"
    }
  },
  "icons": {
    "16": "rtl-logo.png",
    "32": "rtl-logo.png",
    "48": "rtl-logo.png",
    "128": "rtl-logo.png"
  },
  "manifest_version": 2
}